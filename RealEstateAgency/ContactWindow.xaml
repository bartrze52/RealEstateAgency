<Window x:Class="RealEstateAgency.ContactWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RealEstateAgency"
        mc:Ignorable="d"
        Title="Contact" Height="300" Width="400">
    <Grid>
        <StackPanel>
        <Label Content="Contact details of the real estate agency"/>
        <Label Content="Phone number: +123456789"/>
        <Label Content="Email: example@realestateagency.com"/>
        <Label Content="Contact form"/>
        <TextBox x:Name="emailTextBox" HorizontalAlignment="Left" Margin="10,80,0,0" VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name="messageTextBox" HorizontalAlignment="Left" Margin="10,120,0,0" VerticalAlignment="Top" Width="280" Height="120" AcceptsReturn="True"/>
        <Button Content="Send" HorizontalAlignment="Left" Margin="10,250,0,0" VerticalAlignment="Top" Width="75" Click="Send_Click"/>
        </StackPanel>
    </Grid>
</Window>
